@Library("sharedlibrary") _
pipeline {
    agent { label 'Agent-1'}
    stages {
        stage ("Hello"){
            steps{
                script{
                    hello()
                }
            }
        }
        stage("Code"){
            steps {
                script{
                    clone("https://github.com/LondheShubham153/django-notes-app.git","main")
                }
            }
        }
        stage("Build"){
            steps {
                script{
                    docker_build("django-notes-app","latest","vishunangla")
                }
            }
        }
        stage("Pushing to Docker Hub"){
            steps {
                script{
                    docker_push("django-notes-app","vishunangla","latest")
                }
            }
        }
        stage("Deploy"){
            steps {
                echo "This is deploying the code"
                sh "docker run -d -p 8000:8000 django-notes-app"
            }
        }
    }
}
